<div class="user">
    <h1>All users</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Username</th>
                <th>Karma</th>
            </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
            <tr>
                <td>
                    <% if user.avatar.attached? %>
                      <%= image_tag user.avatar.variant(resize: '100x100!'), class: "rounded-circle" %>
                    <% else %>
                      <img src="https://image.flaticon.com/icons/svg/747/747376.svg" height="100px" width="100px" class="rounded-circle"></img>
                    <% end %>
                    <%= link_to user.username, user_path(user) %>
                </td>
                <td><%= user.karma %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>
<%= paginate @users %>