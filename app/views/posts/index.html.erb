<h1 style="margin: 1%">All posts</h1>
<% if user_signed_in? %>
  <p style="margin: 1%">
      <%= link_to 'New post', new_post_path, class: "btn btn-primary" %>
  </p>
<% end %>

<% @posts.each do |post| %>
  <div class="card" style="margin: 1%">
    <h5 class="card-header"><%= post.user.username %></h5>
    <div class="card-body">
      <h4 class="card-title"><%= post.name %></h4>
      <%= post.body.html_safe %>
      <p style="margin-top: 1%"><%= link_to 'Show', post_path(post), class: "btn btn-primary" %><p>
    </div>
    <div class="card-footer text-muted">
        <%= post.created_at.strftime("%B, %d %Y") %>
    </div>
  </div>
<% end %>

<%= paginate @posts %>