<h1><%= @post.name %></h1>

<p><%= @post.body %></p>

<p>
    <strong>Author</strong>
    <%= @post.user.username %>
</p>

<div id="comment-section">
    <ol>
      <%= render @post.comments %>
    </ol>
    <% if user_signed_in? %>
      <h3>Add comment:</h3>
      <%= render 'comments/form' %>
    <% else %>
      <p><%= link_to 'Edit', new_user_session_path %></p>
    <% end %>
</div>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>